<%= turbo_frame_tag dom_id(@report_info) do %>
  <div class="max-w-3xl mx-auto space-y-8 p-6 bg-white shadow-lg rounded-xl">

    <h1 class="text-3xl font-bold text-indigo-700">
      Responder relatório
    </h1>

    <%= form_with model: @report_info, class: "space-y-6" do |f| %>

      <%= f.fields_for :report_field_answers do |ff| %>
        <% field = ff.object.report_field %>

        <div class="p-4 border rounded-lg bg-gray-50 space-y-2">
          <p class="font-semibold text-gray-700">
            <%= field.question %> 
            <% if field.required %>
              <span class="text-red-600">*</span>
            <% end %>
          </p>

          <%= ff.hidden_field :report_field_id %>

          <%= ff.text_area :answer,
                rows: 3,
                class: "w-full border rounded-md p-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
      <% end %>

      <div class="pt-4 flex justify-end space-x-3 border-t border-blue-100">
                <button type="submit" name="commit" value="save_draft" class="inline-flex items-center px-4 py-2 border border-orange-400 text-orange-700 rounded-md text-sm font-medium hover:bg-orange-50 focus:outline-none focus:ring-2 focus:ring-orange-300">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" stroke="currentColor" stroke-width="1" viewBox="0 0 24 24">
                        <path d="M8 6H5c-.553 0-1-.448-1-1s.447-1 1-1h3c.553 0 1 .448 1 1s-.447 1-1 1zM13 10H5c-.553 0-1-.448-1-1s.447-1 1-1h8c.553 0 1 .448 1 1s-.447 1-1 1zM13 14H5c-.553 0-1-.448-1-1s.447-1 1-1h8c.553 0 1 .448 1 1s-.447 1-1 1z"></path> 
                        <path d="M18 2v8c0 .55-.45 1-1 1s-1-.45-1-1V2.5c0-.28-.22-.5-.5-.5h-13c-.28 0-.5.22-.5.5v19c0 .28.22.5.5.5h13c.28 0 .5-.22.5-.5V21c0-.55.45-1 1-1s1 .45 1 1v1c0 1.1-.9 2-2 2H2c-1.1 0-2-.9-2-2V2C0 .9.9 0 2 0h14c1.1 0 2 .9 2 2z"></path> 
                        <path d="M23.71 8.817c.44.438.372 1.212-.148 1.732l-7.835 7.84c-.07.068-.148.126-.227.173l-2.382 1.317c-.33.183-.7.152-.927-.075-.226-.227-.25-.603-.07-.923l1.328-2.373c.042-.085.1-.153.162-.216 0-.012.007-.018.007-.018l7.835-7.84c.52-.52 1.294-.587 1.73-.15l.53.53z"></path>
                    </svg>
                    Salvar Rascunho
                </button>
                <button type="submit" name="commit" value="submit"
                        class="inline-flex items-center px-5 py-2 bg-blue-700 text-white rounded-md text-sm font-semibold hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-400">

                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>

                    Enviar Relatório
                </button>
            </div>

    <% end %>
  </div>
<% end %>
