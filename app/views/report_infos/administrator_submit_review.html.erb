<div class="border border-orange-300 rounded-lg p-6 max-w-md mx-auto font-sans text-gray-700 space-y-6">
  <h2 class="flex items-center text-orange-600 font-semibold mb-4 text-lg">
    <svg class="w-5 h-5 mr-2 stroke-current" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
      <path d="M12 20h9"></path>
      <path d="M16.5 3.5a2.121 2.121 0 1 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
    </svg>
    Avaliação do Relatório
  </h2>

  <%= form_with model: @report_info, url: submit_admin_review_report_info_path(@report_info), method: :post, data: { turbo: false, confirm: "Tem certeza que deseja enviar a avaliação?" } do |f| %>

        <div class="mb-4">
            <label for="review_administrator" class="block text-sm font-medium mb-1">Status da Avaliação</label>
            <%= f.select :review_administrator, options_for_select([["ADEQUADO", "ADEQUADO"], ["ADEQUADO COM RESALVAS ", "ADEQUADO COM RESALVAS"], ["INSATISFATÓRIO", "INSATISFATÓRIO"]], @report_info.review_administrator), { include_blank: true }, class: "w-full bg-gray-100 border border-gray-300 rounded-md px-3 py-2 text-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-400" %>
        </div>

        <div class="mb-6">
            <label for="administrator_comments" class="block text-sm font-medium mb-1">Comentários e Observações</label>
            <%= f.text_area :administrator_comments, value: @report_info.administrator_comments, rows: 4, placeholder: "Comentários do professor...", class: "w-full bg-gray-100 border border-gray-300 rounded-md px-3 py-2 text-gray-500 resize-none focus:outline-none focus:ring-2 focus:ring-orange-400" %>
        </div>

        <div class="flex justify-end space-x-2">
            <button type="button" class="flex items-center space-x-1 border border-gray-400 text-gray-700 px-3 py-1.5 rounded-md hover:bg-gray-100 focus:outline-none" onclick="window.history.back()">
            <span class="text-lg font-bold">×</span>
            <span>Cancelar</span>
            </button>
            <button type="submit" class="flex items-center space-x-1 bg-green-600 hover:bg-green-700 focus:outline-none text-white px-4 py-2 rounded-md">
            <svg class="w-5 h-5 stroke-current" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                <path d="M11.5003 12H5.41872M5.24634 12.7972L4.24158 15.7986C3.69128 17.4424 3.41613 18.2643 3.61359 18.7704C3.78506 19.21 4.15335 19.5432 4.6078 19.6701C5.13111 19.8161 5.92151 19.4604 7.50231 18.7491L17.6367 14.1886C19.1797 13.4942 19.9512 13.1471 20.1896 12.6648C20.3968 12.2458 20.3968 11.7541 20.1896 11.3351C19.9512 10.8529 19.1797 10.5057 17.6367 9.81135L7.48483 5.24303C5.90879 4.53382 5.12078 4.17921 4.59799 4.32468C4.14397 4.45101 3.77572 4.78336 3.60365 5.22209C3.40551 5.72728 3.67772 6.54741 4.22215 8.18767L5.24829 11.2793C5.34179 11.561 5.38855 11.7019 5.407 11.8459C5.42338 11.9738 5.42321 12.1032 5.40651 12.231C5.38768 12.375 5.34057 12.5157 5.24634 12.7972Z" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            <span>Enviar Avaliação</span>
            </button>
        </div>

    <% end %>
</div>
