<div class="space-y-6 p-6 bg-gray-50 rounded-lg">

  <h2 class="text-2xl font-bold text-gray-800 mb-4">Cadastrar Pessoa</h2>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">

    <%= link_to new_admin_student_path, data: { turbo_frame: "tab_content" },
      class: "block border-2 border-blue-400 rounded-lg p-5 bg-blue-50 hover:bg-blue-100 transition-shadow shadow-sm hover:shadow-md" do %>
      <h3 class="font-semibold text-blue-700 mb-2">Cadastrar Aluno</h3>
      <p class="text-sm text-blue-600">Cadastrar estudante no sistema</p>
    <% end %>

    <%= link_to new_admin_professor_path, data: { turbo_frame: "tab_content" },
      class: "block border-2 border-orange-400 rounded-lg p-5 bg-orange-50 hover:bg-orange-100 transition-shadow shadow-sm hover:shadow-md" do %>
      <h3 class="font-semibold text-orange-700 mb-2">Cadastrar Professor</h3>
      <p class="text-sm text-orange-600">Cadastrar docente no sistema</p>
    <% end %>

    <%= link_to new_admin_administrator_path, data: { turbo_frame: "tab_content" },
      class: "block border-solid border-2 border-purple-400 rounded-lg p-5 bg-purple-50 hover:bg-purple-100 transition-shadow shadow-sm hover:shadow-md" do %>
      <h3 class="font-semibold text-purple-700 mb-2">Cadastrar Administrador</h3>
      <p class="text-sm text-purple-700">Elevar conta a nivel de administrador</p>
    <% end %>

  </div>
</div>