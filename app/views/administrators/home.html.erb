<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4">
    <%= notice %>
  </div>
<% end %>

<div class="min-h-screen bg-gradient-to-r from-blue-50 via-white to-orange-50 p-6 font-sans text-gray-800">
  <header class="flex items-center justify-between mb-6">
    <%= render "header", administrator: @administrator %>
  </header>

  <section class="max-w-7xl mx-auto">
    <%= render "/administrators/menu/info", administrator: @administrator %>
  </section>
</div>