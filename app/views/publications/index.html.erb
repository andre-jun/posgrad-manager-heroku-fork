<div class="flex justify-center">
<%= link_to "Voltar à home", root_path,
    class: "bg-indigo-100 hover:bg-indigo-200 text-indigo-800 font-semibold px-6 py-3 rounded-lg shadow-md transition duration-300" %>
</div>

<div class="flex justify-center">
    
    <div class="grid grid-rows-2 gap-6">
        <% @publications.each do |pub| %>
            <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-lg mb-6 ">
                <p> Título: <%= pub.title %> </p>
                <p> Resumo: <%= pub.abstract %> </p>
                <p> Data: <%= pub.publication_date %> </p>
                <p> Link: <%= pub.link %> </p>
                <p> Aluno: <%= pub.student&.user&.full_name %> </p>
                <p> Orientador: <%= pub.professor&.user&.full_name %> </p>
            </div>
        <% end %>
    </div>
</div>