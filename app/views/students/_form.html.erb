<%= form_with(model: user, local: true, class: "space-y-8") do |form| %>
  <% if user.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-semibold mb-2"><%= pluralize(user.errors.count, "error") %> proibiu este usuário de ser salvo:</h2>
      <ul class="list-disc list-inside space-y-1">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <ul>
      <div>
          <%= form.label "Nome", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
          <%= form.label "Sobrenomes", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.text_field :surname, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
          <%= form.label :email, class: "block text-gray-700 font-medium mb-1" %>
          <%= form.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
          <%= form.label "Pronomes", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.text_field :pronoun, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>


      <%= form.fields_for :contact_info do |contact_form| %>
        <div>
            <%= contact_form.label "Número de Telefone", class: "block text-gray-700 font-medium mb-1" %>
            <%= contact_form.text_field :phone_number, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>

      <%= form.fields_for :student  do |student_form| %>
        <div>
            <%= student_form.label "Tipo de curso", class: "block text-gray-700 font-medium mb-1" %>
            <%= student_form.select :program_level, ["Mestrado", "Doutorado"], class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- Falta arrumar a conexão via ProfessorMentorsStudent -->
        <div>
            <%= student_form.label "Orientador", class: "block text-gray-700 font-medium mb-1" %>
            <%# <%= = form.colletion_select :professor_id, Professor.order(:name), class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
            <%= student_form.label "Currículo Lattes", class: "block text-gray-700 font-medium mb-1" %>
            <%= student_form.url_field :lattes_link, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
            <%= student_form.label "Última atualização no Lattes", class: "block text-gray-700 font-medium mb-1" %>
            <%= student_form.date_field :lattes_last_update, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
            <%= student_form.label "Carreira pretendida após graduação", class: "block text-gray-700 font-medium mb-1" %>
            <%= student_form.select :pretended_career, ["Acadêmica", "Trabalho"], class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
            <%= student_form.label "Data de ingresso", class: "block text-gray-700 font-medium mb-1" %>
            <%= student_form.date_field :join_date, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </ul>

  <div>
    <%= form.submit "Confirmar", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded shadow transition duration-200" %>
  </div>
<% end %>
