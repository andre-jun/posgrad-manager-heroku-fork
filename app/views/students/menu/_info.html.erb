<section class="bg-white border border-gray-200 rounded-md shadow p-6 mt-4">
    <h3 class="text-blue-800 font-semibold mb-3 flex items-center space-x-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M12 4C9.79 4 8 5.79 8 8C8 10.21 9.79 12 12 12C14.21 12 16 10.21 16 8C16 5.79 14.21 4 12 4Z" fill="currentColor"> </path> 
            <path d="M4 18C4 15.34 9.33 14 12 14C14.67 14 20 15.34 20 18V20H4V18Z" fill="currentColor"></path>
        </svg>
        <span>Informações Gerais</span>
    </h3>
    <div class="space-y-4" autocomplete="off">
        <div>
            <label for="full_name" class="block text-gray-700 font-semibold mb-1">Nome Completo</label>
            <p class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm"> <%= student.user.name %> <%= student.user.surname %></p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label for="email" class="block text-gray-700 font-semibold mb-1">E-mail</label>
                <p class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm"> <%= student.user.email %> </p>
            </div>
            <div>
                <label for="usp_number" class="block text-gray-700 font-semibold mb-1">Número USP</label>
                <p class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm"> <%= student.user.nusp %> </p>
            </div>
        </div>


        <div>
            <label for="advisor" class="block text-gray-700 font-semibold mb-1">Orientador</label>
            <p class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm"> <%= @professor&.user.name|| "Nenhum professor atribuido"%> <%= @professor&.user.surname %> </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label for="curriculum_link" class="block text-gray-700 font-semibold mb-1 flex items-center space-x-1">
                    <span>Currículo Lattes</span>
                    <%= link_to 'Visualizar Lattes', student.lattes_link, target: "_blank", rel: "noopener", class: "text-blue-600 text-sm underline ml-2" %>
                </label>
            </div>
            <div>
                <label for="last_update" class="block text-gray-700 font-semibold mb-1">Última Atualização do Lattes </label>
                <p class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm"> <%= student.lattes_last_update || 'Missing'%> </p>
            </div>
        </div>

        <div>
            <label for="course_type" class="block text-gray-700 font-semibold mb-1">Tipo de Curso </label>
            <p class="inline-block bg-orange-200 text-orange-700 text-xs px-3 py-1 rounded font-semibold"> <%= student.role || 'missing'%> </p>
        </div>

        <div>
            <label for="career_plan" class="block text-gray-700 font-semibold mb-1">Carreira Pretendida após a Defesa</label>
            <p class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm"> <%= student.pretended_career || 'missing'%> </p>
        </div>

        <div>
            <label for="admission_date" class="block text-gray-700 font-semibold mb-1">Data de Ingresso </label>
            <p class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm"> <%= student.join_date || 'missing'%> </p>
        </div>
    </div>
</section>