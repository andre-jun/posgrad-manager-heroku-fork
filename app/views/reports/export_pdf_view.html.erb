<%# Aqui é só um template que eu achei genericão, pode mudar o quanto quiser (inclusive o nome que salva) %>

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Students List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1 {
      color: #2563eb;
      text-align: center;
      margin-bottom: 30px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th {
      background-color: #2563eb;
      color: white;
      padding: 12px;
      text-align: left;
      font-weight: bold;
    }
    td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
    }
    tr:nth-child(even) {
      background-color: #f9fafb;
    }
    tr:hover {
      background-color: #f3f4f6;
    }
    .footer {
      margin-top: 30px;
      text-align: center;
      color: #6b7280;
      font-size: 12px;
    }
    .summary {
      margin-bottom: 20px;
      padding: 10px;
      background-color: #eff6ff;
      border-left: 4px solid #2563eb;
    }
  </style>
</head>
<body>
  <h1>Relatório Semestral</h1>
  <h1>EACH-USP SI</h1>
  
  <div class="summary">
    <p><strong>Aluno:</strong> <%= @student.user&.full_name %></p>
    <p><strong>Curso:</strong> <%= @student.program_level %></p>
    <p><strong>Orientador:</strong> <%= @student.professor&.user&.full_name %></p>
    <p><strong>Gerado em:</strong> <%= Time.current.strftime("%b %d, %Y às %I:%M %p") %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Program Level</th>
        <th>Lattes</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @student.id %></td>
          <td><%= @student.user.name %></td>
          <td><%= @student.user.email %></td>
          <td><%= @student.user.status %></td>
          <td><%= @student.lattes_link %></td>
        </tr>
    </tbody>
  </table>

  <div class="footer">
    <p>This document was automatically generated from the Students Management System</p>
  </div>
</body>
</html>