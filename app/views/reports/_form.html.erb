<%= form_with(model: report, local: true, class: "space-y-10 max-w-3xl mx-auto") do |form| %>
  <% if report.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg">
      <h2 class="font-semibold mb-3 text-lg">
        <%= pluralize(report.errors.count, "error") %> proibiu este relatório de ser salvo:
      </h2>
      <ul class="list-disc list-inside space-y-1 ml-4">
        <% report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div>
      <%= form.label :semester, "Semestre", class: "block text-gray-800 font-semibold mb-2" %>
      <%= form.text_field :semester, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :year, "Ano", class: "block text-gray-800 font-semibold mb-2" %>
      <%= form.text_field :year, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :due_date_student, "Prazo para os Alunos", class: "block text-gray-800 font-semibold mb-2" %>
      <%= form.date_field :due_date_student, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :due_date_professor, "Prazo para os Orientadores", class: "block text-gray-800 font-semibold mb-2" %>
      <%= form.date_field :due_date_professor, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :due_date_administrator, "Prazo para os Coordenadores", class: "block text-gray-800 font-semibold mb-2" %>
      <%= form.date_field :due_date_administrator, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="border-t border-gray-300 pt-8 space-y-8">
    <h3 class="text-xl font-bold text-gray-900 mb-4">Questões do relatório</h3>
    <%= form.fields_for :report_fields do |report_field| %>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 items-center">
        <div>
          <%= report_field.label :question, "Questão", class: "block text-gray-800 font-semibold mb-2" %>
          <%= report_field.text_field :question, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= report_field.label :field_type, "Tipo de Questão", class: "block text-gray-800 font-semibold mb-2" %>
          <%= report_field.text_field :field_type, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="flex items-center space-x-2 mt-6 sm:mt-0">
          <%= report_field.check_box :required, class: "h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= report_field.label :required, "Obrigatória?", class: "text-gray-800 font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="pt-6 text-center">
    <%= form.submit "Confirmar", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg shadow-lg transition duration-200" %>
  </div>
<% end %>