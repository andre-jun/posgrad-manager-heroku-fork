<%= form_with(model: report, local: true, class: "space-y-8") do |form| %>
  <% if report.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-semibold mb-2"><%= pluralize(report.errors.count, "error") %> proibiu este relatório de ser salvo:</h2>
      <ul class="list-disc list-inside space-y-1">
        <% report.errors.each do |error| %>
          <li><%= report.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <ul>
      <div>
          <%= form.label "Semestre", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.text_field :semester, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
          <%= form.label "Ano", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.text_field :year, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
          <%= form.label "Prazo para os Alunos", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.date_field :due_date_student, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
          <%= form.label "Prazo para os Orientadores", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.date_field :due_date_professor, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
          <%= form.label "Prazo para os Coordenadores", class: "block text-gray-700 font-medium mb-1" %>
          <%= form.date_field :due_date_administrator, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

    <!-- deixar aqui pra adicionar mais questões dinamicamente -->
      <%= form.fields_for :report_fields do |report_field| %>
        <div>
            <%= report_field.label "Questão", class: "block text-gray-700 font-medium mb-1" %>
            <%= report_field.text_field :question, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
            <%= report_field.label "Tipo de Questão", class: "block text-gray-700 font-medium mb-1" %>
            <%= report_field.text_field :field_type, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
            <%= report_field.label "Obrigatória?", class: "block text-gray-700 font-medium mb-1" %>
            <%= report_field.checkbox :field_type, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>

  <div>
    <%= form.submit "Confirmar", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded shadow transition duration-200" %>
  </div>
<% end %>
