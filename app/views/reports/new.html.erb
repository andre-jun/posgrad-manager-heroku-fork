<%= turbo_frame_tag "tab_content" do %>
  <% content_for :title, "Novo relatório" %>

  <h1 class="text-4xl font-extrabold mb-8 text-center text-indigo-900">
    Novo relatório
  </h1>

  <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-2xl p-8 mb-10">
    <%= render "form", report: @report %>
  </div>

  <div class="flex justify-center">
    <%= link_to "Voltar ao feed", adm_home_path(tab: 'reports'),
      data: { turbo_frame: "tab_content" },
      class: "bg-indigo-100 hover:bg-indigo-200 text-indigo-800 font-semibold px-6 py-3 rounded-lg shadow-md transition duration-300" %>
  </div>
<% end %>