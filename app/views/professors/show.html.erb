<%= turbo_frame_tag "tab_content" do %>
    <div>
        <h1> Perfil do Docente </h1>

        <!-- coisas de User -->
        <div>
            <p> Nome: <%= @professor.user&.name %> <%= @professor.user&.surname %> </p>
            <p> Pronomes: <%= @professor.user&.pronoun %> </p>
            <p> NUSP: <%= @professor.user&.nusp %> </p>
            <p> Email: <%= @professor.user&.email %> </p>
            <p> Status: <%= @professor.user&.status %> </p>
        </div>

        <!-- coisas de Professor -->
        <div>
            <p> Departamento: <%= @professor.department %> </p>
            <p> Área de Pesquisa: <%= @professor.research_area %> </p>
        </div>

        <!-- outras métricas -->
        <div>


        </div>

    </div>
    <%= link_to "Voltar",
        adm_home_path(tab: 'faculty'),
        data: { turbo_frame: "tab_content" },
        class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300" %>
<% end %>